# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)

# Images
GET           /images              controllers.Images.list

POST          /images              controllers.Images.create

GET           /images/:id          controllers.Images.find_by_id(id: Long)

POST          /images/:id/deploy    controllers.Images.deploy(id: Long)

DELETE        /images/:id          controllers.Images.delete(id: Long)

# Catchall

GET           /*path               controllers.Application.catchAll(path)